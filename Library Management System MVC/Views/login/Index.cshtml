@model Library_Management_System_MVC.Models.login

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "login", FormMethod.Post, Model.email))
{
    <div class="container" style="margin-top: 30px; display: flex; justify-content: center;">
        <div class="row">
            <div class="col-md-6">
                <h3>Login</h3>
                <p>
                    This Example is for learning Basic Login and Registration Using ADO.NET in MVC.
                    <br />Hope this will boast your Knowledge.
                </p>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.TextBoxFor(e => e.email, new { @class = "form-control", placeholder = "Your Email *" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(e => e.password, new { @class = "form-control", placeholder = "Password *" })

                        </div>
                        <div class="row">
                            <div class="col-md-12" style="margin-bottom: 12px; margin-left: 97px">
                                <button>Forgot Password?</button>
                                <input type="submit" value="Login"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                Not Registered yet?
                                <input type="button" value="Register" onclick="location.href='@Url.Action("Index", "registration")'" />
                            </div>
                        </div>
                        <p></p>
                        <div class="row">
                            <div class="col-md-12" id="loginStatus" style="display:none; background-color:brown; color:white">
                                message: @Model.loginStatus
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    var loginStatus = document.getElementById("loginStatus");

    if ("@Model.loginStatus" != "") {
        loginStatus.style.display = "inline";
    }
</script>
